{
  "name": "@solid-primitives/scroll",
  "version": "2.0.20",
  "description": "Reactive primitives to react to element/window scrolling.",
  "author": "David Di Biase <dave.dibiase@gmail.com>",
  "contributors": [
    "Damian Tarnawski <gthetarnav@gmail.com>"
  ],
  "license": "MIT",
  "homepage": "https://github.com/solidjs-community/solid-primitives/tree/main/packages/scroll",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/solidjs-community/solid-primitives.git"
  },
  "primitive": {
    "name": "scroll",
    "stage": 2,
    "list": [
      "createScrollPosition",
      "useWindowScrollPosition"
    ],
    "category": "Inputs"
  },
  "files": [
    "dist"
  ],
  "private": false,
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "browser": {},
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "require": "./dist/index.cjs"
  },
  "keywords": [
    "monitor",
    "scrollTo",
    "scroll",
    "solid",
    "primitives"
  ],
  "dependencies": {
    "@solid-primitives/event-listener": "^2.3.0",
    "@solid-primitives/rootless": "^1.4.2",
    "@solid-primitives/static-store": "^0.0.5"
  },
  "peerDependencies": {
    "solid-js": "^1.6.12"
  },
  "typesVersions": {},
  "devDependencies": {
    "solid-js": "^1.7.11"
  },
  "scripts": {
    "dev": "tsx ../../scripts/dev.ts",
    "build": "tsx ../../scripts/build.ts",
    "vitest": "vitest -c ../../configs/vitest.config.ts",
    "test": "pnpm run vitest",
    "test:ssr": "pnpm run vitest --mode ssr",
    "test:watch": "watchlist src test -- npm test"
  }
}